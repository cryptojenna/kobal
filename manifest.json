{
  "name": "AnnoTip - Or whatever the fuck we want to call it",
  "version": "0.0.1",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com https://*.firebaseio-demo.com; object-src 'self'",
  "description": "Annotate and Tip if you want i guess whatever",
  "homepage_url": "http://google.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/sha224.js",
      "src/bg/firebase.js",
      "src/bg/mandrill.min.js",
      "src/bg/app.js"
    ],
    "persistent": true
  },
  "permissions" : ["storage"],
  "options_page": "src/options/index.html",
  "content_security_policy": "script-src 'self' https://*.firebase.com https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*.docs.meteor.com/*",
        "*://*.github.com/*",
        "*://*.com/*"
      ],
      "css": [
        "src/content_scripts/annotations.css"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/content_scripts/annotations.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "js/jquery/jquery.min.js"
  ]
}
